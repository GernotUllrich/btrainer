# Copy to .envrc and run `direnv allow` (requires direnv).
# Automatically configures environment when entering the repository.

if [ ! -d "$PWD/.venv" ]; then
  python3 -m venv "$PWD/.venv"
fi
source "$PWD/.venv/bin/activate"

export BTRAINER_DATABASE_URL="postgresql+psycopg://localhost/btrainer"
export PYTHONPATH="$PWD"
